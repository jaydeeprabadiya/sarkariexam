<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <ImageButton
        android:id="@+id/ivBackButton"
        style="@style/Widget.AppCompat.ActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_close_black_vector" />



    <RelativeLayout
        android:id="@+id/rl_corona"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_30sdp"

        >


        <TextView
            android:id="@+id/tv_live"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="wrap_content"
            android:text="Live"
            android:textColor="@color/colorWhite"
            android:textAllCaps="true"
            android:background="@drawable/drawable_live"
            android:padding="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:gravity="center"
            android:textSize="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            ></TextView>

        <TextView
            android:id="@+id/tv_totalcase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="total cases in india"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_15sdp"
            android:layout_toRightOf="@id/tv_live"
            android:layout_marginLeft="@dimen/_10sdp"
            ></TextView>

        <TextView
            android:id="@+id/tv_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_totalcase"
            android:text="updated every hour"
            android:layout_toRightOf="@id/tv_live"
            android:layout_marginLeft="@dimen/_10sdp"
            ></TextView>




        <LinearLayout
            android:id="@+id/ll_first"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_update"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_10sdp"

            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:padding="@dimen/_5sdp"
                android:background="@drawable/drawable_total_confirm"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="confirmed"
                    android:textAllCaps="true"
                    android:textSize="@dimen/_15sdp"
                    android:textColor="@color/colorBlack"
                    android:layout_marginLeft="@dimen/_5sdp"
                    ></TextView>

                <TextView
                    android:id="@+id/tv_totalconfirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4589"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:textSize="@dimen/_15sdp"
                    android:textColor="@color/colorBlack"
                    android:layout_marginLeft="@dimen/_5sdp"
                    >


                </TextView>



            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:padding="@dimen/_5sdp"
                android:background="@drawable/drawable_total_active"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="active"
                    android:textAllCaps="true"
                    android:textSize="@dimen/_15sdp"
                    android:textColor="@color/colorBlack"
                    ></TextView>

                <TextView
                    android:id="@+id/tv_totalactive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4039"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:textSize="@dimen/_15sdp"
                    android:textColor="@color/colorBlack"
                    >


                </TextView>



            </LinearLayout>





        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_second"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_first"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_5sdp"

            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:padding="@dimen/_5sdp"
                android:background="@drawable/drawable_total_recover"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="recovered"
                    android:textAllCaps="true"
                    android:textSize="@dimen/_15sdp"
                    android:textColor="@color/colorBlack"
                    ></TextView>

                <TextView
                    android:id="@+id/tv_totalrecover"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4589"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:textSize="@dimen/_15sdp"
                    android:textColor="@color/colorBlack"
                    >


                </TextView>



            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:padding="@dimen/_5sdp"
                android:background="@drawable/drawable_total_death"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="deaths"
                    android:textAllCaps="true"
                    android:textSize="@dimen/_15sdp"
                    android:textColor="@color/colorBlack"
                    ></TextView>

                <TextView
                    android:id="@+id/tv_totaldeath"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4039"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:textSize="@dimen/_15sdp"
                    android:textColor="@color/colorBlack">

                </TextView>

            </LinearLayout>

        </LinearLayout>


        <TextView
            android:id="@+id/tv_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="state wise case india"
            android:textAllCaps="true"
            android:layout_below="@id/ll_second"
            android:layout_marginTop="@dimen/_10sdp"
            android:textSize="@dimen/_15sdp"
            android:textColor="@color/colorBlack"
            android:layout_marginLeft="@dimen/_5sdp"
            ></TextView>

        <HorizontalScrollView
            android:id="@+id/hc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_state"
            android:layout_marginLeft="@dimen/_5sdp"
            android:scrollbars="none"
            >



        <LinearLayout
            android:id="@+id/ll_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



        </LinearLayout>

        </HorizontalScrollView>





        <LinearLayout
            android:id="@+id/ll_third"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/hc"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_5sdp"

            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:padding="@dimen/_5sdp"
                android:background="@drawable/drawable_state"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="confirmed"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:textSize="@dimen/_15sdp"
                    android:textColor="@color/drawable_state"
                    android:layout_marginLeft="@dimen/_5sdp"
                    ></TextView>

                <TextView
                    android:id="@+id/tv_stateconfirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4589"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:textSize="@dimen/_15sdp"
                    android:textColor="@color/colorBlack"
                    android:layout_marginLeft="@dimen/_5sdp"
                    >


                </TextView>



            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:padding="@dimen/_5sdp"
                android:background="@drawable/drawable_state"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="active"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:textSize="@dimen/_15sdp"
                    android:textColor="@color/drawable_state"
                    android:layout_marginLeft="@dimen/_5sdp"

                    ></TextView>

                <TextView
                    android:id="@+id/tv_stateactive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4039"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:textSize="@dimen/_15sdp"
                    android:textColor="@color/colorBlack"
                    android:layout_marginLeft="@dimen/_5sdp"
                    >


                </TextView>



            </LinearLayout>





        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_fourth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_third"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_10sdp"

            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:padding="@dimen/_5sdp"
                android:background="@drawable/drawable_state"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="recovered"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:textSize="@dimen/_15sdp"
                    android:textColor="@color/drawable_state"
                    android:layout_marginLeft="@dimen/_5sdp"
                    ></TextView>

                <TextView
                    android:id="@+id/tv_staterecover"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4589"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:textSize="@dimen/_15sdp"
                    android:textColor="@color/colorBlack"
                    android:layout_marginLeft="@dimen/_5sdp"

                    >


                </TextView>



            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:padding="@dimen/_5sdp"
                android:background="@drawable/drawable_state"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="deaths"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:textSize="@dimen/_15sdp"
                    android:textColor="@color/drawable_state"
                    android:layout_marginLeft="@dimen/_5sdp"

                    ></TextView>

                <TextView
                    android:id="@+id/tv_statedeath"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4039"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:textSize="@dimen/_15sdp"
                    android:textColor="@color/colorBlack"
                    android:layout_marginLeft="@dimen/_5sdp"

                    >

                </TextView>

            </LinearLayout>

        </LinearLayout>


        <RelativeLayout
            android:id="@+id/rl_watsappshare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_below="@+id/ll_fourth"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:background="@drawable/drawable_black">


        <TextView
            android:id="@+id/tv_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" share on \n watsapp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            ></TextView>

        <ImageView
            android:id="@+id/iv_watsapp"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:src="@drawable/ic_watsappgif"
            android:paddingRight="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_toRightOf="@+id/tv_share"
            android:layout_marginTop="@dimen/_5sdp"
            ></ImageView>



        </RelativeLayout>

        <ImageView
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_90sdp"
            android:src="@drawable/ic_live_dashboard"
            android:layout_below="@+id/ll_fourth"
            android:scaleType="fitXY"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:layout_marginRight="@dimen/_50sdp"

            ></ImageView>







    </RelativeLayout>





</RelativeLayout>
