<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite">

    <RelativeLayout
        android:id="@+id/rl_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


    <ImageView
        android:id="@+id/ic_delete"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:src="@drawable/ic_delete"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_15sdp"
       ></ImageView>


    <TextView
        android:id="@+id/tv_dlt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/_16sdp"
        android:layout_toRightOf="@id/ic_delete"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:textStyle="bold"
        ></TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Are you sure you want to delete this item?"
            android:textSize="@dimen/_15sdp"
            android:layout_toRightOf="@id/ic_delete"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_below="@+id/tv_dlt"
            ></TextView>

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_below="@id/rl_delete"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="#D6E0E8"
        ></View>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:orientation="horizontal"
            android:layout_below="@id/rl_delete"
            android:layout_marginBottom="@dimen/_10sdp"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_blue_drawable"
                android:gravity="center"
                android:text="Cancel"
                android:layout_weight="1"
                android:padding="@dimen/_5sdp"
                android:textColor="@color/colorWhite"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_blue_drawable"
                android:gravity="center"
                android:layout_weight="1"
                android:padding="@dimen/_5sdp"
                android:text="Delete"
                android:textColor="@color/colorWhite"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:textStyle="bold" />
        </LinearLayout>

</RelativeLayout>
